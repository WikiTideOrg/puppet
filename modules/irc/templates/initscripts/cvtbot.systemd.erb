[Unit]
Description=WikiTide IRC CVT bot

[Service]
Type=simple
User=irc
SyslogIdentifier=cvtbot
ExecStart=/usr/bin/dotnet run --project <%= @install_path %>/CVTBot/CVTBot.csproj --configuration Release
Restart=on-failure
WorkingDirectory=<%= @install_path %>
Environment=HOME=<%= @install_path %>

[Install]
WantedBy=multi-user.target
