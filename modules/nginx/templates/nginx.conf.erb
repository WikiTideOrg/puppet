# This file is managed by puppet

user www-data;
<%- if @nginx_worker_processes != 'auto' -%>
worker_processes <%= @nginx_worker_processes %>;
<%- else -%>
worker_processes <%= @facts['processors']['count'] %>;
<%- end -%>
pid /run/nginx.pid;
worker_rlimit_nofile 16192; # Twice the number of worker_connections

events {
	worker_connections 8096;
	use epoll;
	multi_accept on;
}

http {
	# Basic settings
	sendfile on;
	tcp_nopush on;
	tcp_nodelay on;
	client_max_body_size <%= @nginx_client_max_body_size %>;
	http2_max_field_size 8k;
	types_hash_max_size 2048;
	# 512 x 4
	server_names_hash_max_size 2048;
	# 128 x 4
	server_names_hash_bucket_size 512;

	keepalive_timeout <%= @keepalive_timeout %>;
	keepalive_requests <%= @keepalive_requests %>;

	include /etc/nginx/mime.types;
	default_type application/octet-stream;

	server_tokens off;

	# SSL Settings
	ssl_ciphers EECDH+CHACHA20:EECDH+AES128:EECDH+AES256:EECDH+3DES:!MD5;
	ssl_protocols TLSv1.2 TLSv1.3;
	ssl_prefer_server_ciphers on;
	ssl_stapling on;
	ssl_session_cache shared:SSL:20m;
	ssl_session_timeout 60m;

	# GZIP Settings
	gzip off;
	gzip_disable "msie6";
	gzip_comp_level 6;
	gzip_min_length 500;
	gzip_types text/plain text/css text/xml text/javascript
	image/tiff image/x-icon image/x-ms-bmp image/svg+xml
	application/json application/javascript application/x-javascript
	application/xml application/rss+xml application/atom+xml application/rdf+xml
	video/mpeg video/webmv video/x-flv;

	# Default headers
	add_header X-Served-By '<%= @facts['networking']['fqdn'] %>';

	# XSS Protection
	add_header x-xss-protection "1; mode=block" always;

	add_header X-Frame-Options "ALLOW-FROM static.wikiforge.net";

	# Add response time and status to access.log
	log_format wikiforge '$remote_addr - $remote_user [$time_local] '
		'"$request_method $scheme://$host$request_uri" $status $body_bytes_sent '
		'"$http_referer" "$http_user_agent" $request_time '
		'$ssl_protocol/$ssl_cipher';

	# Logging
	access_log /var/log/nginx/access.log wikiforge;
	error_log /var/log/nginx/error.log error;

	# Set real IP for cache proxy web requests
	<%- @cache_proxies.sort.each do |key, value| -%>
	set_real_ip_from <%= value['ip'] %>; # <%= key %>
	<%- if value['ip6'] -%>
	set_real_ip_from <%= value['ip6'] %>;
	<%- end -%>

	<%- end -%>
	real_ip_header X-Real-IP;

	# VHosts
	include /etc/nginx/conf.d/*.conf;

	# NGINX statistics
	server {
		listen 8090;
		listen [::]:8090;

		server_name 127.0.0.1 localhost;
		root /var/www/html;

		location /server-status {
		stub_status;
			access_log off;
			allow 127.0.0.1;
		}
	}

	include /etc/nginx/sites-enabled/*;
}
